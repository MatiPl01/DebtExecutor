<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.layout.VBox?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Label?>
<?import pl.age.edu.controls.InputField?>
<?import java.lang.String?>
<VBox minWidth="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.age.edu.controllers.views.CreatePersonalExpenseViewController">
   <children>
      <Label text="Create personal expense">
         <styleClass>
            <String fx:value="heading" />
            <String fx:value="h2" />
         </styleClass>
      </Label>
      <InputField label="Title" fx:id="titleInput"/>
      <InputField label="Amount" fx:id="amountInput"/>
      <VBox spacing="10.0">
         <children>
            <Label styleClass="color-text-primary" text="Select payer:" />
            <ListView fx:id="payerSelectList"/>
         </children>
      </VBox>
      <VBox spacing="10.0">
         <children>
            <Label styleClass="color-text-primary" text="Select payee:" />
            <ListView fx:id="payeeSelectList"/>
         </children>
      </VBox>

      <Button mnemonicParsing="false" onAction="#onSubmit" styleClass="button--primary" text="SUBMIT"/>
   </children>
</VBox>
