<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import pl.edu.agh.debtexecutor.controls.InputField?>

<?import java.lang.String?>

<VBox stylesheets="@../../css/views/CreateCategoryView.css"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="pl.edu.agh.debtexecutor.controllers.views.forms.createCategory.CreateCategoryViewController">
    <styleClass>
        <String fx:value="category"/>
        <String fx:value="view"/>
    </styleClass>
    <VBox styleClass="category__content">
        <VBox styleClass="personal-expense__inputs">
            <InputField fx:id="categoryName" label="Category Name"/>
        </VBox>
        <Button mnemonicParsing="false" onAction="#onSubmit"
                styleClass="button--primary" text="SUBMIT"/>
    </VBox>
</VBox>
