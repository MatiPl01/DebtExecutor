<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<?import java.lang.String?>
<HBox alignment="CENTER_RIGHT" spacing="5.0"
      styleClass="background-secondary-dark" xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pl.edu.agh.debtexecutor.controllers.layout.TopBarController">
    <children>
        <Button fx:id="darkLightSwitch" mnemonicParsing="false"
                onAction="#onThemeChange" text="Set dark theme">
            <styleClass>
                <String fx:value="button"/>
                <String fx:value="button--gray"/>
                <String fx:value="button--small"/>
            </styleClass>
        </Button>
        <Pane maxHeight="25.0" maxWidth="25.0" minHeight="25.0" minWidth="25.0"
              prefHeight="25.0" prefWidth="25.0" styleClass="user-image"
              fx:id="userImage"/>
    </children>
    <padding>
        <Insets left="10.0" right="10.0"/>
    </padding>
    <stylesheets>
        <URL value="@../../css/layout/TopBar.css"/>
    </stylesheets>
</HBox>
